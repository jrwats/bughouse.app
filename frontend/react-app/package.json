{
  "name": "bughouse-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@jrwats/react-chessground": "^1.5.4",
    "@mui/icons-material": "^5.0.1",
    "@mui/material": "^5.0.1",
    "@mui/styles": "^5.0.1",
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "chessground": "^8.1.5",
    "firebase": "^8.9.1",
    "invariant": "^2.2.4",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.4",
    "react-error-boundary": "^3.1.4",
    "react-firebaseui": "^5.0.2",
    "react-relay": "^12.0.0",
    "react-scripts": "4.0.3",
    "relay-runtime": "^12.0.0",
    "web-vitals": "^1.0.1"
  },
  "engines": {
    "node": "16.x.x"
  },
  "scripts": {
    "relay": "relay-compiler --src ./src --schema ./data/schema.graphql",
    "start": "DEV=1 PORT=5000 react-scripts start",
    "start_https": "PORT=5000 HTTPS=true SSL_CRT_FILE=localhost.crt SSL_KEY_FILE=localhost.key react-scripts start",
    "preinstall": "./ensure-env.sh || echo 'Could not get secrets'",
    "build": "react-scripts build",
    "build:dev": "REACT_APP_FIREBASE=DEV REACT_APP_SOCKET_URL=https://localhost:7777 react-scripts build",
    "start:dev": "PORT=5000 serve --cors --ssl-cert localhost.crt --ssl-key localhost.key -s build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-relay": "^12.0.0",
    "graphql": "^15.0.0",
    "relay-compiler": "^12.0.0",
    "relay-config": "^12.0.0",
    "serve": "^11.3.2"
  }
}
